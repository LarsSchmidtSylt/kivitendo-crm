#!/bin/sh
set -e

case "$1" in
    remove|deconfigure)
	rm /usr/lib/lx-office-erp/crm 
	rm /usr/lib/lx-office-crm/inc/*.*
	mv /usr/lib/lx-office-erp/crm_menu.ini /usr/lib/lx-office-erp/menu.ini 2>null
	rm /usr/lib/lx-office-erp/image/CRM.png
	rm -rf /var/lib/lx-office-crm/dokumente
	rm -rf /var/lib/lx-office-crm/vorlage
        ;;
    upgrade)
        ;;
    failed-upgrade)
        ;;
    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

